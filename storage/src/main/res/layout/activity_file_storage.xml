<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <EditText
        android:id="@+id/edit_text_file_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_write_file_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入文件到本地" />

        <Button
            android:id="@+id/button_read_file_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读出文件从本地"/>


    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/button_write_to_external_file_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入文件到外部" />

    <Button
        android:id="@+id/button_read_from_external_file_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读出文件从外部"/>

</LinearLayout>

    <Button
        android:id="@+id/button_read_raw_file_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读出文件从Raw"/>

    <Button
        android:id="@+id/button_read_assets_file_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读出文件从Assets"/>
    <Button
        android:id="@+id/button_read_xml_file_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读出文件从Xml"/>

